#NOTE!
#To build the OpenDivaBuilder for Assets, you need to edit the all.json file and add in "OpenDivaBuilder" to the list.

import os

def build(bld):

    bld.BuilderPlugin(
        target             = 'OpenDivaBuilder',
        vs_filter          = 'Tools/AssetProcessor/Builders',
        file_list          = ['opendivabuilder.waf_files'],
        platforms          = ['win', 'darwin'],
        configurations     = ['debug_all', 'profile_all'],
        disable_pch        = True,
        includes           = ['..'], #so that we can specify the module name of ExampleBuilder in the include statements.
        test_all_file_list = ['opendivabuilder_tests.waf_files'],
    )


